<main class="container-fluid {{pageMainClass}}" id="{{pageMainClass}}">
	<section class="row">
		<div class="col-12">
			<section class="row">
				<form action="/getCatalogueItems" method="POST" class="col-12 filterSearch">
					<h2 class="text-center py-3">Browse Our Catalogue!</h2>
					<div class="row filterFields">
						<div class="col-sm-12 col-md-6">
							<input type="text" name="search" value="" placeholder="Search Term" class="col-12 col-sm-5 form-control" id="searchTerm">
						</div>
						<div class="col-sm-12 col-md-6">
							<select aria-placeholder="Filters" class="form-select filtersBar" id="categorySelect">
								<option value="" selected>Filter by Category</option>
								{{#each categories}}
								<option>
									{{this}}
								</option>
								{{/each}}
							</select>
						</div>
					</div>
					
					<!--<button type="submit" class="col btn searchBtn btn-outline-info">Submit</button>-->
				</form>
			</section>
			<section class="catalogueSetup text-center">
				<div class="row">
					{{#each itemsList}}
					<div class="col-12 col-sm-6 col-lg-4 col-xl-3 catalogueItem" data-iteminfo='{
					"id": {{id}}, 
					"sku": {{sku}},
					"item_name": "{{item_name}}", 
					"description": "{{description}}",
					"item_category": "{{item_category}}",
					"price": {{price}},
					"discount": {{discount}},
					"img": "{{image}}"
				}'>
						<h3>{{item_name}}</h3>
						<img src="{{image}}" class="img-fluid mb-3 groceryImg">
						<div>
							<span>Price:</span>
							<span class="price">${{price}}</span>
						</div>
						<button type="button" class="btn btn-primary addCartButtonStyle" data-bs-toggle="modal" data-bs-target="#catalogueItemModal">Add to Cart</button>
					</div>
					{{/each}}
				</div>
			</section>
		</div>
	</section>
	<div class="modal" id="catalogueItemModal" tabindex="-1">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title"></h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<form>
					<!--<input type="text" className="d-none" id="modalItemId" name="modalItemId" value="">-->
					<div class="modal-body row">
						<img src="/img/1to1ratio.png" id="catamodalImg" class="col-12">
						<span class="col-12 text-center" id="catamodalName">Name</span>
						<section class="d-flex justify-content-between">
							<span class="col-6" id="catamodalSku">#Sku</span>
							<span class="col-6" id="catamodalPrice">$Price</span>
						</section>
						<section class="d-flex">
							<span class="col-6" id="catamodalDesc">Description</span>
							<div class="col-6">
								<input type="number" id="catamodalQty" name="modalQty" placeholder="Quantity">
								<button type="button" class="btn btn-primary" id="catamodalSubmit" data-bs-dismiss="modal" onClick="{alert('Added item to cart!')}">Add to Cart</button>
								<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
							</div>
						</section>
					</div>
				</form>
			</div>
		</div>
	</div>	
</main>