<main class="container-fluid {{pageMainClass}}">
	<section class="row">
		<div class="col-12">
			<section class="row filterSearch">
				<form>
					<input type="text" placeholder="Search Term" class="col-12 col-sm-5">
					<select aria-placeholder="Filters" class="col-12 col-sm-5">
						<option>
							Filters
						</option>
					</select>
					<button type="submit" class="col">Submit</button>
				</form>
			</section>
			<section class="catalogueSetup text-center">
				<div class="row">
					{{#each itemsList}}
					<div class="col-6 col-sm-4 col-lg-3 catalogueItem">
						<p>{{item_name}}</p>
						<img src="{{img}}" class="img-fluid">
					</div>
					{{/each}}
				</div>
			</section>
		</div>
	</section>	
</main>