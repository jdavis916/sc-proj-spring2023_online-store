<main class="container-fluid {{pageMainClass}}">
	<section class="row">
		<form class="validate-form col-12 col-md-6">
			<div class="text-center contactPageHeaders">
			Contact Us
			</div>
			<section class="row" style="padding: 15px 0;">
				<div class="validate-input col-12 col-md-6" data-validate="Name is required">
					<span>First Name:</span>
					<input type="text" name="name" class="col-12">
				</div>
				<div class="validate-input col-12 col-md-6" data-validate="Name is required">
					<span>Last Name:</span>
					<input type="text" name="name" class="col-12">
				</div>
			</section>
			<section class="row" style="padding: 15px 0;">
				<div class="col-12 col-md-6">
					<span>Phone:</span>
					<input type="number" name="phone" class="col-12">
				</div>
				<div class="validate-input col-12 col-md-6" data-validate="Valid email is required: ex@abc.xyz">
					<span>Email:</span>
					<input type="text" name="email" class="col-12">
				</div>
			</section>
			<div class="row" style="padding: 15px 0;">
				<span>Subject:</span>
				<div>
					<select class="selection-2 select2-hidden-accessible" name="service" tabindex="-1" aria-hidden="true">
					<option>
						Please select a subject
					</option>
					</select>
				</div>
			</div>
			<div class="wrap-input100 validate-input row" data-validate="Message is required" style="padding: 15px 0;">
				<span class="label-input100">Message:</span>
				<textarea class="input100" name="message" class="col-12">
					
				</textarea>
				<span class="focus-input100"></span>
			</div>
			<div class="container-contact100-form-btn">
				<div class="wrap-contact100-form-btn">
				<div class="contact100-form-bgbtn"></div>
				<button class="contact100-form-btn">Send</button>
				</div>
			</div>
		</form>
		<section class="col-12 col-md-6 contactInfo">
			<label class="contactPageHeaders">Contact Info</label>
			<section class="row">
				<div class="col-12 col-md-6">
					<figure class="placeholder" style="padding-top: 15px;">Address:</figure>
					<figure class="placeholder">1234 Placeholder Dr.</figure>
					<figure class="placeholder" style="padding-top: 15px;">Phone Number:</figure>
					<figure class="placeholder">333-333-3333</figure>
				</div>
				<div class="col-12 col-md-6">
					<figure class="placeholder" style="padding-top: 15px;">Email:</figure>
					<figure class="placeholder">a@b.org</figure>
					<figure class="placeholder" style="padding-top: 15px;">Hours:</figure>
					<figure class="placeholder">M-F 9am-9pm</figure>
				</div>
		</section>
	</section>	
</main>